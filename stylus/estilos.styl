@import "normalize.styl"
@import "fonts.styl"

gris_claro = #818181
gris_oscuro = #333333
gris_mas_claro = #F0F0F0
rojo = #BD255B

a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0

img
	vertical-align top

ul
	margin 0
	padding 0

.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro


.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black, .3)

.author
	color gris_claro

.border-bottom
	border-bottom 1px solid gris_claro

.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

.center-block
	margin 0 auto

.center-text
	text-align center

//oocss classes
.container
	font-size 0
	padding 1.4rem
	text-align center

.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em

.header
	height 3.5em
	//a
	//	display none
	.title
		font-size 1.1em
		text-align center
		margin 0 
		line-height 3.5em
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.left
	float left

.right
	float right

.menu
	display none

.name
	color gris_oscuro

.padding
	padding 1em

.padding-tb
	padding 1em 0

.playing
	&.small
		width 20em
	
.progress
	position relative
	margin 1em 0
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		
		left 0
	.max 
		
		right 0
	.total
		height 5px
		background gris_claro
		width 75%
		border-radius 5px
		margin 0 auto

	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		position relative
	.circle
		width 10px
		height 10px
		background gris_oscuro
		border-radius 50%
		position absolute
		right 0
		top -2px

.relative
	position relative

.right-text
	text-align right

.round
	border-radius 50%
	overflow hidden

.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.wrap
	width 1000px


@media screen and (min-width:480px)
	.song	
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width:1000px)

	body
		background gris_mas_claro

	.button-menu
		display none

	.menu
		display block
		background gris_mas_claro
		overflow hidden
		.item
			float left
			list-style none
			
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_oscuro


	.header
		height auto
		background white
		.title
			display none

	.isotipo
		width 122px

	.logo
		padding 1.3em 0
		overflow hidden
		

	.avatar
		width 38px
		height 38px

	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			content ""
			border-left 7px solid transparent
			border-top 10px solid gris_claro
			border-right 7px solid transparent			
			display inline-block
			margin-left .4em

