@import "normalize.styl"
@import "fonts.styl"

gris_claro = #818181
gris_oscuro = #333333
rojo = #BD255B

a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0

img
	vertical-align top

.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro


.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black, .3)

.author
	color gris_claro

.border-bottom
	border-bottom 1px solid gris_claro

.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

.center-block
	margin 0 auto

.center-text
	text-align center

//oocss classes
.container
	font-size 0
	padding 1.4rem
	text-align center

.header
	height 3.5em
	//a
	//	display none
	.title
		font-size 1.1em
		text-align center
		margin 0 
		line-height 3.5em

.menu
	display none

.name
	color gris_oscuro

.padding
	padding 1em

.padding-tb
	padding 1em 0

.playing
	&.small
		width 20em
	
.progress
	position relative
	margin 1em 0
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		
		left 0
	.max 
		
		right 0
	.total
		height 5px
		background gris_claro
		width 75%
		border-radius 5px
		margin 0 auto

	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		position relative
	.circle
		width 10px
		height 10px
		background gris_oscuro
		border-radius 50%
		position absolute
		right 0
		top -2px

.relative
	position relative

.right-text
	text-align right

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0


@media screen and (min-width:480px)	
	.song	
		&:nth-child(even)
			margin-right 1em

	.playing
		&.medium
			width auto